  {{ form_errors(form) }}

  <fieldset>
    <legend>Password recovery process</legend>
    <div class="clearfix">
      {{ form_label(form.email) }}
      {{ form_errors(form.email) }}
      <div class="input-prepend">
        <span class="add-on"><i class="icon-envelope"></i></span>
        {{ form_widget(form.email, { 'attr': {'class': 'xlarge'} }) }}
      </div>
    </div>
    <div class="clearfix">
      {{ form_label(form.password) }}
      {{ form_errors(form.password) }}
      <div class="input-prepend">
        <span class="add-on"><i class="icon-asterisk"></i></span>
        {{ form_widget(form.password, { 'attr': {'class': 'xlarge'} }) }}
      </div>
    </div>
    <div class="clearfix">
      {{ form_label(form.password2) }}
      {{ form_errors(form.password2) }}
      <div class="input-prepend">
        <span class="add-on"><i class="icon-asterisk"></i></span>
        {{ form_widget(form.password2, { 'attr': {'class': 'xlarge'} }) }}
      </div>
    </div>
  </fieldset>

  {{ form_rest(form) }}